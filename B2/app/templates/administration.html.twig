{% extends "base_auth.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/administration.css">
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <h1>Administration</h1>

    <!-- Ajouter le formulaire de filtrage des rôles -->
    <form action="" method="get">
        <label for="filter_role">Filtrer par rôle :</label>
        <select name="filter_role" id="filter_role">
            <option value="">Tous les rôles</option>
            {% for role in roles %}
                <option value="{{ role }}" {% if filter_role == role %}selected{% endif %}>{{ role }}</option>
            {% endfor %}
        </select>
        <button type="submit">Filtrer</button>
    </form>

    <section>
        <h2>Utilisateurs</h2>
        <form action="modifier_roles.php" method="post">
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Rôle</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>
                                <select name="roles[{{ user.id }}]">
                                    {% for userRole in roles %}
                                        <option value="{{ userRole }}" {% if user.role == userRole %}selected{% endif %}>{{ userRole }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                <button type="submit" name="user_id" value="{{ user.id }}">Modifier</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>
    </section>

    <section>
        <h2>Statuts</h2>
        <table>
            <thead>
                <tr>
                    <th>ID_Statut</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
                {% for statut in statuts %}
                    <tr>
                        <td>{{ statut.ID_Statut }}</td>
                        <td>{{ statut.Nom }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    <section>
        <h2>Types</h2>
        <table>
            <thead>
                <tr>
                    <th>ID_Type</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.ID_Type }}</td>
                        <td>{{ type.Nom }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    <section>
        <h2>Urgences</h2>
        <table>
            <thead>
                <tr>
                    <th>ID_Urgence</th>
                    <th>Niveau</th>
                </tr>
            </thead>
            <tbody>
                {% for urgence in urgences %}
                    <tr>
                        <td>{{ urgence.ID_Urgence }}</td>
                        <td>{{ urgence.Niveau }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
